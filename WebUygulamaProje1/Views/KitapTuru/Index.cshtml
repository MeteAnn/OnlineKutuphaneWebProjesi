@model List<KitapTuru> //Sana gelecek olan nesne içinde kitap türü olan nesneler diyoruz burada

@if (TempData["basarili"] != null) //yani burada demek istediğimiz Controller kısmında biz string bir metin girdiğimizde null olmamuş oluyor burada null değilse diye if komutu açıyoruz zaten bi kereliğine çalışacaktır 
{

    <h2 style="color:red">@TempData["basarili"]</h2>  //burada tempData neyse ekrana onu yazar.

    
}


    <div class="container">

<div class="row pt-3 pb-4" 
    <div>
        <h1>Kitap Türleri</h1>
    </div>
    </div>
<table class="table table-bordered">
    <thead>
    <tr>
       <th>
           Id
       </th>
        <th>
            Kitap Türü
        </th>
        <th>

        </th>


    </tr>
    </thead>

    <tbody>
        @foreach (var KitapTuru in Model)
        {
            <tr>
                <td>@KitapTuru.Id</td>

                <td>@KitapTuru.Ad</td>

                <td>
                        <a asp-controller="KitapTuru" asp-action="Guncelle" asp-route-id="@KitapTuru.Id" type="button" class="btn btn-warning" style="width:150px">Güncelle</a> @*asp-route-id="@KitapTuru.Id": Bu, bağlantının yol parametresi (route parameter) olarak kullanılacak bir id değeri belirtir. Bu id değeri, @KitapTuru.Id ifadesi ile dinamik olarak belirlenir ve belirli bir "KitapTuru" kaydının kimliğini temsil eder.*@
                 </td>


                    <td>

                        <a asp-controller="KitapTuru" asp-action="Sil" asp-route-id="@KitapTuru.Id" type="button" class="btn btn-danger" style="width:150px">Sil</a>


                        
                    </td>

            </tr>
        }
    </tbody>



</table>

<div class="row pt-3 pb-2">

    <div>
        <a asp-controller="KitapTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
            Yeni Kitap Türü Oluştur
        </a>
    </div>

</div>

</div>